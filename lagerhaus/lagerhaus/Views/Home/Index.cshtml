
<div id="header">
    LAGERHAUS
</div>
<hr class="hrYellow"/>
<div id="body">
    <div class="tab">
        <button id="btnBatches">Batches</button>
        <button id="btnFruits" >Fruits</button>
        <button id="btnRegions">Regions</button>
        <button id="btnWeather">Weather</button>
    </div>

    <!-- Tab content -->
    <div id="Batches" class="tabcontent">
        <table style="width:100%" id="tblBatches">
            <tr id="columnNames" style="border-bottom:solid; border-color:#009036">
                <th>Fruitname</th>
                <th>Year</th>
                <th>Month</th>
                <th>Amount</th>
                <th>Storage Date</th>
                <th>Region</th>
                <th>Ripeness</th>
            </tr>
        </table>
        <h4>Add new Batch:</h4>
        <table style="width:400px">
            <tr>
                <td>fruit_name:</td>
                @*<td><input type="text" id="txtFruitName"></td>*@
                <td>
                    <select id="selectFruitName"></select>
                </td>
            </tr>
            <tr>
                <td>year:</td>
                <td><input type="text" id="txtYear"></td>
            </tr>
            <tr>
                <td>month:</td>
                <td><input type="text" id="txtMonth"></td>
            </tr>
            <tr>
                <td>amount:</td>
                <td><input type="text" id="txtAmount"></td>
            </tr>
            <tr>
                <td>storage_date:</td>
                <td><input type="text" id="txtStorageDate"></td>
            </tr>
            <tr>
                <td>region:</td>
                @*<td><input type="text" id="txtRegion"></td>*@
                <td>
                    <select id="selectRegion"> </select>
                </td>
            </tr>
            <tr>
                <td>ripeness:</td>
                <td><input type="text" id="txtRipeness"></td>
            </tr>
            <tr>
                @*<td><button id="btnAddBatch"> Add Batch</button></td>*@
                <td id="txtStatus"></td>
            </tr>
        </table>
        <button id="btnAddBatch" style="width:350px">Add Batch</button>

    </div>

    <div id="Fruits" class="tabcontent">
        <table style="width:100%" id="tblFruits">
            <tr id="columnNames" style="border-bottom:solid; border-color:#009036">
                <th>Fruitname</th>
                <th>Ripeness Grade</th>
                <th>Minimum Storage Span</th>
            </tr>
        </table>
        <h4>Add new Fruit:</h4>
        <table style="width:400px">
            <tr>
                <td>Fruitname:</td>
                @*<td><input type="text" id="txtFruitname"></td>*@
                <td><input type="text" id="txtFruitname"></td>
            </tr>
            <tr>
                <td>Ripeness Grade:</td>
                <td><input type="text" id="txtRipenessGrade"></td>
            </tr>
            <tr>
                <td>Minimum Storage Span:</td>
                <td><input type="text" id="txtMinimumStorageSpan"></td>
            </tr>
            <tr>
                @*<td><button id="btnAddFruit"> Add Batch</button></td>*@
                <td id="txtStatus"></td>
            </tr>
        </table>
        <button id="btnAddFruit" style="width:350px">Add Fruit</button>
    </div>

    <div id="Regions" class="tabcontent">
        <table style="width:100%" id="tblRegions">
            <tr id="columnNames" style="border-bottom:solid; border-color:#009036">
                <th>Name</th>
                <th>Area</th>
                <th>Level</th>
            </tr>
        </table>
    </div>

    <div id="Weather" class="tabcontent">

        <table>
            <tr>
                <td>
                    Year:
                    <input type="number" id="txtWeatherYear" placeholder="2019" />
                </td>
                <td>
                    Month:
                    <input type="number" id="txtWeatherMonth" placeholder="6"/>
                </td>
                <td>
                    <button id="btnWeatherLoad">Load Weather</button>
                </td>
            </tr>
        </table>


        <table style="width:100%" id="tblWeather">
            <tr id="columnNames" style="border-bottom:solid; border-color:#009036">
                <th>Year</th>
                <th>Month</th>
                <th>Region</th>
                <th>Rainy Days</th>
                <th>Sunny Days</th>
            </tr>
        </table>
    </div>


    <br />
