<div id="header">
    LAGERHAUS
</div>
<hr class="hrYellow"/>
<div id="body">
    <div class="tab">
        <button id="btnBatches">Batches</button>
        <button id="btnFruits" >Fruits</button>
        <button id="btnRegions">Regions</button>
        <button id="btnWeather">Weather</button>
    </div>

    <!-- Tab content -->
    <div id="Batches" class="tabcontent">
        <table style="width:100%" id="tblBatches">
            <tr id="columnNames" style="border-bottom:solid; border-color:#009036">
                <th>Fruitname</th>
                <th>Year</th>
                <th>Month</th>
                <th>Amount</th>
                <th>Storage Date</th>
                <th>Region</th>
                <th>Ripeness</th>
            </tr>
        </table>
        <hr />
        <h4>Add new Batch:</h4>
        <table style="width:45%">
            <tr>
                <td>Fruitname:</td>
                <td>
                    <select id="selectFruitName"></select>
                </td>
            </tr>
            <tr>
                <td>Year:</td>
                <td><input type="number" id="txtYear"></td>
            </tr>
            <tr>
                <td>Month:</td>
                <td><input type="number" id="txtMonth"></td>
            </tr>
            <tr>
                <td>Amount:</td>
                <td><input type="number" id="txtAmount"></td>
            </tr>
            <tr>
                <td>Storage date:</td>
                <td><input type="text" id="txtStorageDate" placeholder="31.01.2019"></td>
            </tr>
            <tr>
                <td>Region:</td>
                <td>
                    <select id="selectRegion"> </select>
                </td>
            </tr>
            <tr>
                <td>Ripeness:</td>
                <td><input type="text" id="txtRipeness" placeholder="Grade A"></td>
            </tr>
            <tr>
                <td id="txtStatus"></td>
            </tr>
        </table>
        <br />
        <button id="btnAddBatch" style="width:26%">Add Batch</button>
    </div>

    <div id="Fruits" class="tabcontent">
        <h3>Fruits</h3>
        <p>Paris is the capital of France.</p>
    </div>

    <div id="Regions" class="tabcontent">
        <h3>Regions</h3>
        <p>Tokyo is the capital of Japan.</p>
    </div>

    <div id="Weather" class="tabcontent">
        <h3>Weather</h3>
        <p>Tokyo is the capital of Japan.</p>
    </div>

    <br />

    <hr />

    
</div>